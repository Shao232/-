<?xml version="1.0" encoding="utf-8"?>
<com.slibrary.widgets.pullrecyclerview.PullToRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pullView">


    <include layout="@layout/view_pull_refresh_view"/>

    <com.slibrary.widgets.pullrecyclerview.PullNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/NestedScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/DynamicLayout"/>

    </com.slibrary.widgets.pullrecyclerview.PullNestedScrollView>

    <include layout="@layout/view_pull_load_more"/>

</com.slibrary.widgets.pullrecyclerview.PullToRefreshLayout>



